<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#2C1C55" /> <!-- Dark purple background -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Border (optional) -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" /> <!-- White border -->

    <!-- Padding inside the spinner (optional) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
