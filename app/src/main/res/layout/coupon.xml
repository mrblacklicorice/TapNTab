<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:backgroundTint="#4B4949"
    android:foregroundTint="#4D3D3D">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="302dp"
        android:layout_height="172dp"
        android:layout_centerInParent="true"
        android:foregroundGravity="center_vertical|center_horizontal"
        app:srcCompat="@drawable/coupon" />

    <ImageView
        android:id="@+id/coupon_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@id/imageView3"
        android:layout_alignTop="@id/imageView3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/app_logo" />

    <TextView
        android:id="@+id/coupon_title"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView3"
        android:layout_marginStart="47dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/coupon_image"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coupon_description"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coupon_title"
        android:layout_marginStart="47dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/coupon_image"
        android:text="TextView"
        android:textAlignment="center" />

</RelativeLayout>
